#include <iostream>
#include "E101.h"
#include <math.h>

using namespace std;
class Robot{ // declarations
private:
    int v_left, v_right, cam_tilt;
    int dv;
    double line_error;
    long elapsed;
    int quadrant;
    const int cam_width = 320;
    const int cam_height = 240;
    const int v_left_go = 52;
    const int v_right_go = 44; //48
    const int left_motor = 5;
    const int right_motor = 1;
    double kp = 0.03;
    double kd = 0;
    int black;
    int line_present = 0;
    

public:
    Robot Rob(); // default constructor
    int InitHardware();
    //void ReadSetMotors();
    void SetMotors();
    int MeasureLine();
    int FollowLine();
    int measureTime();
};

int Robot::InitHardware(){
//    int err;
//    err = init(0);
    init(0);
    open_screen_stream();
    take_picture();
    update_screen();
    
    return 0;
}

/*void Robot::ReadSetMotors(){
}*/

void Robot::SetMotors(){
    set_motors(left_motor,v_left);
    set_motors(right_motor,v_right);
    hardware_exchange();
}

int Robot::MeasureLine(){
    take_picture();
    update_screen();
    int countr = 60; //rows 1, 120, 239
	int countc = 0; //columns 
	int pixel[320]; //array list 
	int index[320];
	int error = 0;
	int max=0;
	int min =255;
	black = 0;
	line_error=0;
	
	for(int i=0; i<=320;i++){ //setting index with negative and positive numbers
		index[i]=i-160;
	}
		for(countc=0; countc<320; countc++){ //counting through the row 			
			int pix = (int)get_pixel(countr, countc, 3);
			if (pix > max) {
           			 max = pix;
			}
			else if (pix < min) {
            			min = pix;
			}
			  int thres = (max+min)/2;
                for(countc=0; countc<320; countc++){
                        int pix = (int) get_pixel(countr, countc, 3);
                        if(pix<thres){ //if black set it as 1
                                pixel[countc] = 1;
                                black++;
                        }
                        else{ //if white set it as 0
                                pixel[countc] = 0;
                        }
		}
		
		for(int n=0; n<=320; n++){//going through both arrays and comparing
			line_error = error+index[n]*pixel[n];
		}
		
		line_error/=black;
		
		if(black>10){
			line_present=1;
		}
		else{
			line_present=0;
		}
	return 0;
}
   

int Robot::FollowLine(){
    if (line_present==1) {
        dv = (int) (line_error*kp)+kd;
        // dv = 0;
        v_left = v_left_go + dv;
        v_right = v_right_go+dv;
	if(v_left>65){
		v_left=65;
	}
	if(v_right<30){
		v_right = 30;
	}
        //cout << "Line error =" << line_error << " dv= " << dv;
        SetMotors();
    } else { // go back
        cout << " Line missing " <<endl;
        v_left = 44;
        v_right = 52;
        SetMotors();
        //sleep1(100);
    }
    return 0;
}

int main() {
    Robot robot;
    int count = 0;
    char ip[15] = {"130.195.6.196"};
    char msg[24] = {"Please"};
    char pass[24];
    connect_to_server(ip, 1024);
    send_to_server(msg);
    receive_from_server(pass);
    send_to_server(pass);
    sleep1(100);
    
    robot.InitHardware();
    
    while (count<5000) {
        robot.MeasureLine();
        robot.FollowLine();
	count++;
    }
    return 0;
}

